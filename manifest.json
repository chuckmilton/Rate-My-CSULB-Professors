{
    "manifest_version": 3,
    "name": "CSULB RateMyProfessors",
    "version": "1.0",
    "description": "Display RateMyProfessors ratings for professors at CSULB.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": [
      "https://rate-my-csulb-professors.vercel.app/*",
      "https://www.ratemyprofessors.com/graphql"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": [
            "https://*.csulb.edu/*",
            "https://csulb.collegescheduler.com/*"
                    ],
        "js": ["content.js"],
        "css": ["content.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": ["images/rmp.svg", "emojis.json", "images/*.png", "nameMappings.json"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  